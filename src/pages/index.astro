---
import Selector from '../components/Selector.svelte'
import Hero from "../components/Hero.astro";
import Filter from "../components/Filter.svelte"

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Dark Souls Checker</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<span class="w-full text-sm text-center flex justify-center p-2">Spoiler Alert! Proceed with caution as the following tool contains major plot details from the main story of Dark Souls.</span>
		<Hero />
		<Selector client:only />
		<Filter client:only />
		<footer class="w-full my-20 flex justify-center items-center text-sm "><span id="year"></span></footer>
	</body>
</html>

<style>
	body {
		background-color: #0c0708;
		color: white;
		overflow-x: hidden;
		font-family: "Poppins", sans-serif;
	}
	span{
		background-color: #0c0708;
	}
</style>
<script>
	let year = document.getElementById('year')
	let d = new Date()
	if(year){
		year.innerText = 'Darks souls checker ' + String( d.getFullYear() )
	}
</script>
